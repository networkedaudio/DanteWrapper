<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net461</TargetFramework>
    <LangVersion>8</LangVersion>
    <Nullable>enable</Nullable>
    <DisableFastUpToDateCheck>true</DisableFastUpToDateCheck>
    <PlatformTarget>x64</PlatformTarget>
    <Prefer32Bit>false</Prefer32Bit>
    <Platforms>x64</Platforms>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\DanteWrapperLibrary\DanteWrapperLibrary.csproj" />
  </ItemGroup>

  <Target Name="Copy dlls" BeforeTargets="Compile">
    <Copy SourceFiles="C:\Development\GitHub\DanteWrapper\sources\bin\Debug\x64\dante_browsing_test.dll" DestinationFolder="$(TargetDir)" />
    <Copy SourceFiles="C:\Development\GitHub\DanteWrapper\sources\bin\Debug\x64\dante_routing_test.dll" DestinationFolder="$(TargetDir)" />
    <Message Text="dll's copied" Importance="high" />
  </Target>

</Project>
